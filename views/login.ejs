<%- include('partials/head.ejs') %>

<%- include('partials/header.ejs') %>
<section>
    <h2>Ingresar</h2>
    <div class="add-user">
        <form action='/user/login' id="form-login" method="POST">
        <div class="form-container">
            <label for="email">Email</label>
            <input type="email" id="email" name="email">
            <% if (locals.errors && errors.email) { %>
                <div class="input-field error-email">
                    <%=errors.email.msg%>
                </div>
            <% } %>
        </div>
        <div class="form-container">
            <label for="password">Password</label>
            <input type="password" id="password" name="password">
            <% if (locals.errors && errors.password) { %>
                <div class="input-field error-password">
                <%=errors.password.msg%>
                </div>
            <% } %>
        </div>
        <div class="form-container">
                <input type="checkbox" name="remember" id="remember"> 
                <label for="remember">Recordar mis datos</label>
        </div> 
        <button class="user-button" type="submit">Login</button>
        </form>
    </div>         
</section>
<script src="js/loginValidation.js" type="text/javascript"></script>
<%- include('partials/footer.ejs') %>