<%- include('partials/head.ejs') %>

<%- include('partials/header.ejs') %>
<section>
<h2>Registrarse</h2>
    <div class="add-user">
    <form action="/user/register" method="POST" id="form-register">
    <div class="form-container">
        <label for="name">Name</label>
        <input type="text" id="name" name="name">
            <% if (locals.errors && errors.name) { %>
            <div class="input-field error-name">
            <%=errors.name.msg%>
            </div>
            <%  }  %>      
    </div>
    <div class="form-container">
        <label for="email">Email</label>
        <input type="email" id="email" name="email">
            <% if (locals.errors && errors.email) { %>
            <div class="input-field error-email">
            <%=errors.email.msg%>
            </div>
            <%  }  %> 
    </div>
    <div class="form-container">
        <label for="password">Password</label>
        <input type="password" id="password" name="password">
            <% if (locals.errors && errors.password) { %>
            <div class="input-field error-password">
            <%=errors.password.msg%>
            </div>
            <%  }  %>       
    </div>
    <div class="form-container">
        <label for="rol">Tipo de Usuario: </label>
        <select name="rol" id="rol">
            <option value="0">Usuario</option>
            <option value="1">Administrador</option>
        </select>
    </div>
    <button class="user-button" type="submit">Registrar</button>
    </form>
    </div>
</section>
<script src="js/registerValidation.js" type="text/javascript"></script>
<%- include('partials/footer.ejs') %>